@model Lab03_View.Models.Book
@{
	ViewData["Title"] = "Create";
}
<h2>Thêm mới sách</h2>

<form asp-action="Create" method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title" class="control-label">Tên sách</label>
        <input asp-for="Title" class="form-control" placeholder="Tên sách">
    </div>
    <div class="form-group">
        <label asp-for="AuthorId">Tác giả</label>
        <section asp-for="AuthorId" class="form-control" asp-items="@ViewBag.authors"
            <option value="">Chọn tác giả</option>
        </section>
    </div>
    <div class="form-group">
        <label asp-for="GenreId">Thể loại</label>
        <section asp-for="GenreId" class="form-control" asp-items="@ViewBag.genres"
            <option value="">Chọn hể loại</option>
        </section>
    </div>
    <div class="form-group">
        <label asp-for="Price">Giá sách</label>
		<input type="text" class="form-control" asp-for="Price" placeholder="Giá sách">
    </div>
    <div class="form-group">
        <label asp-for="TotalPage">Tổng số trang</label>
        <input type="text" class="form-control" asp-for="TotalPage" placeholder="Tổng số trang">
    </div>
    <div class="form-group">
        <label asp-for="Image">Hình ảnh/Poter</label>
        <input type="text" class="form-control" asp-for="Image">
    </div>
    <div class="form-group">
        <label asp-for="Sumary">Giới thiệu ngắn</label>
        <textarea class="form-control" asp-for="Sumary" placeholder="Nội dung giới thiệu sách..."></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Lưu Lại</button>
 </form>
    
