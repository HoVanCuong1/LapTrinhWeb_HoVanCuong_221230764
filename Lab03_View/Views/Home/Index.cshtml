<button id ="loadAjax" class="btn btn-sm btn-primary">Click load book từ partialResult</buton>
<hr />
<!--Nội dung sẽ load từ partial vieww vào đây    2-->
<div id ="data-from-ajax" class="row">Loading data.....</buton>

@section Scripts{
	<script>
		//gọi sự kiện click vào nuts bấm có id="loadAjax"
		$('#loadAjax').click(function(){
			//thông qua Ajax load nội dung từ partial view vào id ="#data-from-ajax"
			$('#data-from-ajax').load("/Book/PopularBook");
		})
	</script>
}
